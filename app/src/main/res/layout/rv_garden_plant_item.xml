<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout android:id="@+id/event_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iv_plant_image"
        android:layout_width="67dp"
        android:layout_height="67dp"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="7dp"

        app:layout_constraintVertical_bias="0"
        android:src="@color/teal_200"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearance="@style/ShapeAppearanceOverlay.App.CornerSize10Percent" />


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/appCompatImageView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="14dp"
        android:src="@drawable/ic_next"
        app:layout_constraintBottom_toBottomOf="@+id/iv_plant_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/iv_plant_image" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_plant_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="14dp"
        android:fontFamily="@font/poppins_bold"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/iv_plant_image"
        app:layout_constraintTop_toTopOf="@+id/iv_plant_image"
        tools:text="Богдан" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_plant_kind"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="14dp"
        android:layout_marginBottom="6dp"
        android:textColor="@color/gray"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_plant_image"
        app:layout_constraintStart_toEndOf="@+id/iv_plant_image"
        tools:text="Кактус" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_line"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="7dp"
        android:visibility="visible"
        android:src="@color/white10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_plant_image" />

</androidx.constraintlayout.widget.ConstraintLayout>