<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/primary_background"
    android:orientation="vertical">

    <androidx.camera.view.PreviewView
        android:id="@+id/camera_surface"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="-16dp"
        app:layout_constraintBottom_toTopOf="@+id/appCompatImageView6"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/appCompatImageView6"
        android:layout_height="164dp"
        android:layout_width="wrap_content"
        android:scaleType="fitXY"
        android:src="@drawable/header_bottom"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_camera_grid"
        android:layout_width="303dp"
        android:layout_height="304dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_camera_grid"
        app:layout_constraintBottom_toBottomOf="@+id/camera_surface"
        app:layout_constraintEnd_toEndOf="@+id/camera_surface"
        app:layout_constraintStart_toStartOf="@+id/camera_surface"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_gallery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="41dp"
        android:padding="8dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_camera"
        app:layout_constraintBottom_toBottomOf="@+id/iv_camera_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/iv_camera_btn" />

    <com.entexy.gardenguru.ui.customview.ClickableImageView
        android:id="@+id/iv_change_camera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="41dp"
        android:padding="8dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_rotate"
        app:layout_constraintBottom_toBottomOf="@+id/iv_camera_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/iv_camera_btn" />

    <com.entexy.gardenguru.ui.customview.ClickableImageView
        android:id="@+id/iv_camera_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_camera_btn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/appCompatImageView6" />



    <com.entexy.gardenguru.ui.customview.ClickableImageView
        android:id="@+id/iv_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginHorizontal="8dp"
        android:padding="8dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_cross"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />




</androidx.constraintlayout.widget.ConstraintLayout>