<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/primary_background"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/toolbar_bg"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/header"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="32dp"
            android:fontFamily="@font/pacifico"
            android:text="@string/timetable"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="@+id/toolbar_bg"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.entexy.gardenguru.ui.customview.ClickableImageView
            android:id="@+id/iv_settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:padding="8dp"
            android:src="@drawable/ic_setting"
            app:layout_constraintBottom_toBottomOf="@+id/title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/title" />

        <com.entexy.gardenguru.ui.customview.ClickableImageView
            android:id="@+id/iv_leaf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:padding="8dp"
            android:src="@drawable/ic_leaf"
            app:layout_constraintBottom_toBottomOf="@+id/title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/title" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_events"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="-30dp"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_bg"
        tools:itemCount="4"
        tools:listitem="@layout/rv_timetable_item" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/calendar_root"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/background_calendar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <com.entexy.gardenguru.ui.customview.CalendarView
            android:id="@+id/calendar_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="36dp"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:itemCount="1"
            tools:listitem="@layout/rv_calendar_item" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/oval_ring_green"
            app:layout_constraintBottom_toBottomOf="@+id/calendar_view"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_month_name" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_month_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:fontFamily="@font/junction_regular"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/calendar_view"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/calendar_root"
            tools:text="Октябрь" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/expanded_btn_background"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:layout_marginEnd="32dp"
        android:src="@drawable/expanded_bt_bg"
        app:layout_constraintBottom_toBottomOf="@+id/iv_plus"
        app:layout_constraintEnd_toEndOf="@+id/iv_plus"
        app:layout_constraintTop_toTopOf="@+id/iv_plus" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_cam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:alpha="0"
        android:src="@drawable/ic_camera"
        app:layout_constraintBottom_toBottomOf="@+id/iv_plus"
        app:layout_constraintStart_toStartOf="@+id/expanded_btn_background"
        app:layout_constraintTop_toTopOf="@+id/iv_plus" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/et_input_plant_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:alpha="0"
        android:background="@color/transparent"
        android:fontFamily="@font/poppins_regular"
        android:maxLines="2"
        android:text="@string/enter_plant_name"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/expanded_btn_background"
        app:layout_constraintEnd_toStartOf="@+id/iv_plus"
        app:layout_constraintStart_toEndOf="@+id/iv_cam"
        app:layout_constraintTop_toTopOf="@+id/expanded_btn_background" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iv_plus"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="-35dp"
        android:background="@color/primary_green"
        android:scaleType="center"
        android:src="@drawable/ic_plus"
        app:layout_constraintBottom_toTopOf="@+id/calendar_root"
        app:layout_constraintEnd_toEndOf="parent"
        app:shapeAppearance="@style/ShapeAppearanceOverlay.App.CornerSize50Percent" />

</androidx.constraintlayout.widget.ConstraintLayout>