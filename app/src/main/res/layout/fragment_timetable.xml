<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/primary_background"
    android:orientation="vertical">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/toolbar_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@drawable/header"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:fontFamily="@font/pacifico"
        android:text="@string/timetable"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/toolbar_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.example.gardenguru.ui.customview.ClickableImageView
        android:id="@+id/iv_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:layout_marginStart="8dp"
        android:src="@drawable/ic_setting"
        app:layout_constraintBottom_toBottomOf="@+id/title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/title" />

    <com.example.gardenguru.ui.customview.ClickableImageView
        android:id="@+id/iv_leaf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:layout_marginEnd="8dp"
        android:src="@drawable/ic_leaf"
        app:layout_constraintBottom_toBottomOf="@+id/title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/title" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_events"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="-30dp"
        app:layout_constraintBottom_toTopOf="@+id/calendar_bg"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_bg"
        tools:itemCount="4"
        tools:layout_editor_absoluteX="4dp"
        tools:listitem="@layout/rv_timetable_item" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/calendar_bg"
        android:layout_width="match_parent"
        android:layout_height="196dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_calendar_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.example.gardenguru.ui.customview.CalendarView
        android:id="@+id/calendar_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="36dp"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:itemCount="1"
        tools:listitem="@layout/rv_calendar_item" />

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/oval_ring_green"
        app:layout_constraintBottom_toBottomOf="@+id/calendar_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/calendar_view" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_month_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:fontFamily="@font/junction_regular"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/calendar_bg"
        tools:text="Октябрь" />


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/expanded_btn_background"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:layout_marginEnd="32dp"
        android:src="@drawable/expanded_bt_bg"
        app:layout_constraintBottom_toBottomOf="@+id/iv_plus"
        app:layout_constraintEnd_toEndOf="@+id/iv_plus"
        app:layout_constraintTop_toTopOf="@+id/iv_plus" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_cam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:alpha="0"
        android:src="@drawable/ic_camera"
        app:layout_constraintBottom_toBottomOf="@+id/iv_plus"
        app:layout_constraintStart_toStartOf="@+id/expanded_btn_background"
        app:layout_constraintTop_toTopOf="@+id/iv_plus" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/et_input_plant_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:background="@color/transparent"
        android:alpha="0"
        android:fontFamily="@font/poppins_regular"
        android:maxLines="2"
        android:text="@string/enter_plant_name"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/expanded_btn_background"
        app:layout_constraintEnd_toStartOf="@+id/iv_plus"
        app:layout_constraintStart_toEndOf="@+id/iv_cam"
        app:layout_constraintTop_toTopOf="@+id/expanded_btn_background" />


    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iv_plus"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="-35dp"
        android:background="@color/primary_green"
        android:scaleType="center"
        android:src="@drawable/ic_plus"
        app:layout_constraintBottom_toTopOf="@+id/calendar_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:shapeAppearance="@style/ShapeAppearanceOverlay.App.CornerSize50Percent" />

</androidx.constraintlayout.widget.ConstraintLayout>